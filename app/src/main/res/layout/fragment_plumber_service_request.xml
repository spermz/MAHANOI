<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:layout_marginBottom="14dp"
                        android:text="What kind of plumbing works do you want ?"/>

                    <RadioGroup
                        android:id="@+id/service_plumber_radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <RadioButton
                            android:id="@+id/rdbPlumber1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Install"/>

                        <RadioButton
                            android:id="@+id/rdbPlumber2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Repair"/>

                        <RadioButton
                            android:id="@+id/rdbPlumber3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Replace"/>

                        <RadioButton
                            android:id="@+id/rdbPlumber4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Removal"/>

                        <RadioButton
                            android:id="@+id/rdbPlumber5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Others"/>

                    </RadioGroup>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="20sp"
                        android:layout_marginBottom="14dp"
                        android:textStyle="bold"
                        android:text="Which part of the plumbing system requires work?"/>

                    <EditText
                        android:id="@+id/service_plumber_plumbingSystemPart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="20sp"
                        android:layout_marginBottom="14dp"
                        android:textStyle="bold"
                        android:text="Descripe your problems"/>

                    <EditText
                        android:id="@+id/service_plumber_problem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="20sp"
                        android:layout_marginBottom="14dp"
                        android:textStyle="bold"
                        android:text="What type of serviced place ?"/>

                    <EditText
                        android:id="@+id/service_plumber_servicePlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="20sp"
                        android:layout_marginBottom="14dp"
                        android:textStyle="bold"
                        android:text="Any others details ?"/>

                    <EditText
                        android:id="@+id/service_plumber_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btnPlumberServiceRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="REQUEST"/>



        </LinearLayout>
    </ScrollView>


</LinearLayout>