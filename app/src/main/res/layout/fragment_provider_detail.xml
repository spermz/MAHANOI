<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="20sp"

                        android:textStyle="bold"
                        android:text="Service Type"/>

                    <TextView
                        android:id="@+id/tv_providerDetail_ServiceType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="16sp"
                        android:layout_marginBottom="15dp"
                        android:text="Detail 1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Provider Name"/>
                    <TextView
                        android:id="@+id/tv_providerDetail_providerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="16sp"
                        android:layout_marginBottom="15dp"
                        android:text="Detail 2"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Telephone Number"/>
                    <TextView
                        android:id="@+id/tv_providerDetail_telephoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="16sp"
                        android:layout_marginBottom="15dp"
                        android:text="Detail 3"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="E-Mail"/>
                    <TextView
                        android:id="@+id/tv_providerDetail_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="16sp"
                        android:layout_marginBottom="15dp"
                        android:text="Detail 4"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Service Detail"/>
                    <TextView
                        android:id="@+id/tv_providerDetail_serviceDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:textSize="16sp"
                        android:layout_marginBottom="15dp"
                        android:text="Detail 5"/>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                >

                <Button
                    android:id="@+id/btnServiceAccept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@color/myGreen"
                    android:textColor="@color/whiteText"
                    android:text="Accept"/>

                <Button
                    android:id="@+id/btnServiceDenied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/whiteText"
                    android:background="@color/myRed"
                    android:text="Denied"/>

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>